nano /etc/systemd/system/github_monitor.service

[Unit]
Description=GitHub Monitor Bot

[Service]
ExecStart=/usr/bin/python3 /root/monitoring/github/github-monitoring.py
WorkingDirectory=/root/monitoring/github
Restart=always

[Install]
WantedBy=multi-user.target

#
sudo systemctl daemon-reload
sudo systemctl enable github_monitor
sudo systemctl start github_monitor
sudo systemctl status github_monitor